<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EveningMeal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="VisualLintBounds">

        <ImageView
            android:id="@+id/BackgroundEvening"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/dinner_background"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/EveningMenu"
            android:layout_width="0dp"
            android:layout_height="67dp"
            android:background="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:padding="16dp"
            android:text="Evening Menu"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/BeefandBeanschiliImage"
            android:layout_width="243dp"
            android:layout_height="299dp"
            android:layout_marginTop="136dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/beef_and_beans_chili"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/BeefandBeanschiliText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:background="@color/light_grey"
            android:fontFamily="@font/comfortaa_variablefont_wght"
            android:text="Beef and Beans chili"
            android:textColor="#D50000"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="@+id/BeefandBeanschiliImage"
            app:layout_constraintTop_toBottomOf="@+id/BeefandBeanschiliImage"
            tools:ignore="HardcodedText,VisualLintOverlap" />

        <TextView
            android:id="@+id/rilledSteakMashPotatoGreenBeansText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:background="@color/light_grey"
            android:fontFamily="@font/comfortaa_variablefont_wght"
            android:text="Grilled Steak, Mash\nPotato and Green Beans"
            android:textColor="#D50000"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rilledSteakMashPotatoGreenBeansImage"
            tools:ignore="HardcodedText,VisualLintOverlap" />

        <TextView
            android:id="@+id/GrilledFishwithGarlicandBasText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="28dp"
            android:background="@color/light_grey"
            android:fontFamily="@font/comfortaa_variablefont_wght"
            android:text="Grilled fish with\ngarlic and basil"
            android:textColor="#D50000"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/GrilledFishwithGarlicandBasImage"
            tools:ignore="HardcodedText,VisualLintOverlap,VisualLintBounds" />

        <TextView
            android:id="@+id/ChickpeaandSpinachCurrywithRiceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/light_grey"
            android:fontFamily="@font/comfortaa_variablefont_wght"
            android:text="Chickpea and spinach\ncurry with ruce"
            android:textColor="#D50000"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ChickpeaandSpinachCurrywithRiceImage"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/ChickpeaandSpinachCurrywithRiceImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="92dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/chickpea_and_spinach_curry_with_ruce"
            tools:ignore="ContentDescription,VisualLintBounds,ImageContrastCheck" />

        <ImageView
            android:id="@+id/rilledSteakMashPotatoGreenBeansImage"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginTop="492dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/grilled_steak_mash_potato_green_beans"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/GrilledFishwithGarlicandBasImage"
            android:layout_width="247dp"
            android:layout_height="195dp"
            android:layout_marginTop="468dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/grilled_fish_with_garlic_and_basil"
            tools:ignore="ContentDescription,VisualLintBounds" />

        <Button
            android:id="@+id/btnBack4"
            android:layout_width="110dp"
            android:layout_height="71dp"
            android:layout_marginBottom="204dp"
            android:text="Back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="HardcodedText" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
