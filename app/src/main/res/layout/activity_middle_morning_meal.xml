<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MiddleMorningMeal">

    <!-- Background Image (Full-Screen) -->

    <!-- Title Text -->
    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/brunch_background"
        tools:ignore="ContentDescription"
        tools:layout_editor_absoluteX="-37dp"
        tools:layout_editor_absoluteY="0dp" />

    <!-- Berry Smoothies Image -->

    <!-- Berry Smoothies Text -->

    <!-- Back Button (Centered at Bottom) -->

    <TextView
        android:id="@+id/MidMorningMenuText"
        android:layout_width="1005dp"
        android:layout_height="84dp"
        android:background="@color/black"
        android:gravity="center"
        android:padding="16dp"
        android:text="Brunch Menu"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,VisualLintBounds" />

    <ImageView
        android:id="@+id/BerrysmoothiesImage"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/MidMorningMenuText"
        app:srcCompat="@drawable/berry_smoothies"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <TextView
        android:id="@+id/BerrysmoothiesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="4dp"
        android:background="@color/light_grey"
        android:fontFamily="@font/poppins_regular"
        android:text="Berry\nsmoothies"
        android:textColor="@color/blue"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@id/BerrysmoothiesImage"
        app:layout_constraintTop_toBottomOf="@id/BerrysmoothiesImage"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnBack2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="124dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/OatMealCookiesImage"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MidMorningMenuText"
        app:srcCompat="@drawable/oatmeal_cookies"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/OatMealCookiesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="92dp"
        android:background="@color/light_grey"
        android:fontFamily="@font/poppins_regular"
        android:text="Oat Meal\nCookies"
        android:textColor="@color/blue"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@id/OatMealCookiesImage"
        app:layout_constraintTop_toBottomOf="@id/OatMealCookiesImage"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/HummusandVeggiesticksImage"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="88dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BerrysmoothiesText"
        app:srcCompat="@drawable/hummus_and_veggie_sticks"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <TextView
        android:id="@+id/HummusandVeggiesticksText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:background="@color/light_grey"
        android:fontFamily="@font/poppins_regular"
        android:text="Hummus and\nVeggie Sticks"
        android:textColor="@color/blue"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@id/HummusandVeggiesticksImage"
        app:layout_constraintTop_toBottomOf="@id/HummusandVeggiesticksImage"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/TrailMixImage"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/trail_mix"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/TrailMixText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginTop="4dp"
        android:background="@color/light_grey"
        android:fontFamily="@font/poppins_regular"
        android:text="Trail Mix"
        android:textColor="@color/blue"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/TrailMixImage"
        app:layout_constraintTop_toBottomOf="@+id/TrailMixImage"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>
